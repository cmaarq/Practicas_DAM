package condicionales;

import java.util.Scanner;

public class EJ4 {

	public static void main(String[] args) {
		
		int ejeX=0;
		int ejeY=0;
		
		final int arriba=1;
		final int abajo=2;
		final int izquierda=3;
		final int derecha=4;
		
		int movimiento;
		
		Scanner direccion = new Scanner(System.in);
		
		while(true) {
			
			movimiento=direccion.nextInt();

			if (arriba == (ejeX+1));
			else if (abajo == (ejeX-1)); 
			else if (izquierda == (ejeY-1));
			else if (derecha == (ejeY+1));
			
			System.out.println("Tu posicion es "+ejeX+" en el eje X y "+ejeY+" en el eje Y.");
		
	}

	}
}
